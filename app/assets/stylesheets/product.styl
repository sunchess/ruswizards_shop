.products
  &__count
    padding: 30px 0
    color: #5d5f68
    font-size: 14px
    
  &__list
    padding-bottom: 40px
  
  .product
    width: 275px
    min-height: 420px
    margin-right: 30px
    background: #F8F8F8
    display: inline-block
    cursor: pointer
    position: relative
    
    &:hover
      background: #FAFAFA
    
    &__footer
      background: white
      position: absolute
      bottom: 0
      min-height: 90px
      width: 100%
      padding: 28px
      cursor: default
    
    &__title
      font-size: 15px
      color: #393c45
      font-weight: 700
      text-transform: uppercase
    
    &__category
      font-size: 15px
      color: #b1b1b3
      padding: 2px 0 0 0
      
    &__price
      color: #4CAF50
      font-size: 15px
      float: right
      font-weight: bold
      padding-top: 15px
      
    &__comments-count
      display: inline-block
      border-bottom: 1px dotted
      padding-top: 15px
      color: #333
      text-decoration: none
      line-height: 16px
      
      &:hover
        color: #989898