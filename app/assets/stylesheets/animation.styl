.fade
  position absolute
  top 0
  left 0
  right 0
  bottom 0
  opacity 1
  &.ng-enter
    opacity 0
  &.ng-enter-active
    opacity 1
  &.ng-leave
    opacity 1
  &.ng-leave-active
    opacity 0

.fade.ng-enter,
.fade.ng-leave
  -webkit-transition all .3s ease
  -moz-transition all .3s ease
  -o-transition all .3s ease
  transition all .3s ease

.slide
  position absolute
  left 0
  top 0
  width 100%
  height 100%
  overflow auto
  &.ng-enter
    left 100%
  &.ng-enter-active
    left 0
  &.ng-leave
    left 0
  &.ng-leave-active
    left -100%

.slide.ng-enter,
.slide.ng-leave
  -webkit-transition all .3s ease
  -moz-transition all .3s ease
  -o-transition all .3s ease
  transition all .3s ease


