.sign
  position: absolute
  top: 80px
  right: 15px
  width: 300px
  background: white
  box-shadow: 0px 0px 3px rgba(0,0,0,.2)
  z-index: 1
  visibility: hidden
  opacity: 0
  transition: .3s
  padding: 15px
  
  &.show
    right: 30px
    opacity: 1
    visibility: visible
    
  &__remember
    margin-top: 10px
    
  &__close
    font-size: 32px
    font-weight: lighter
    position: absolute
    right: 10px
    top: 0px