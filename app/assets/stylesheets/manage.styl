.manage
  &__category
    &__item
      //
    &__title
      font-weight: bold
      display: inline-block
      border-bottom: 1px dashed
      margin-bottom: 10px
      cursor: pointer
      
      &:hover
        opacity: .6

  &__product
    &__item
      font-weight: normal
      padding: 15px
      border: 1px solid #e7e7e7
      margin-top: -1px
    
    &__price
      font-weight: bold
      float: right
    
  &__category, &__product
    list-style: none
    margin: 0
    padding: 0
      
